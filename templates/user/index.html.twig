{% extends 'base.html.twig' %}

{% block title %}Listar Usuarios{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/plugins/dataTables/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/plugins/dataTables/dataTables.bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/plugins/dataTables/padding.bootstrap.fix.css') }}">

    <style type="text/css">
        #btn_delete {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            line-height: 1.5;
            border-radius: 0.2rem;
        }
    </style>
{% endblock %}

{% block page_title %}Listar Usuarios{% endblock %}

{% block breadcrums %}
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Usuarios</a></li>
    <li><a href="#">
            {% if role == 'admin'%}Administradores{% endif %}
            {% if role == 'specialist'%}Especialistas{% endif %}
            {% if role == 'patient'%}Pacientes{% endif %}
        </a>
    </li>
    <li><a href="#">Listar Usuarios</a></li>

{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="card">
                <div class="card-body">

                    <div>
                        {% for message in app.flashes('notification') %}
                            <div class="alert alert-primary alert-dismissible fade show">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    </div>

                    <table id="tabla" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr>
                                <th>Foto</th>
                                <th>Nombre y Apellidos</th>
                            {% if role == 'specialist' %}
                                <th>Especialidad</th>
                                <th>Nacionalidad</th>
                            {% endif %}
                            {% if role == 'patient' %}
                                <th>Teléfono</th>
                                <th>Dirección</th>
                            {% endif %}
                            <th>Email</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                {% if user.foto == null %}
                                    <td><span>Sin foto</span></td>
                                {% else %}
                                    <td><img src="{{ asset('uploads/images/' ~ user.foto.imagen) }}" alt="{{ user.foto.nombre }}" /></td>
                                {% endif %}
                                <td>{{ user.nombre }} {{ user.apellidos }} </td>
                                {% if role == 'specialist' %}
                                    <td>{{ user.especialidad }}</td>
                                    <td>{{ user.nacionalidad }}</td>
                                {% endif %}
                                {% if role == 'patient' %}
                                    <td>{{ user.telefono }}</td>
                                    <td>{{ user.direccion }}</td>
                                {% endif %}
                                    <td>{{ user.usuario.email }}</td>
                                    <td>
                                        <div class="row ml-2">
                                            <a class="btn btn-sm btn-primary m-1" href="{{ path('user_show', {'id': user.usuario.id, 'role': role}) }}">Mostrar</a>
                                            <a class="btn btn-sm btn-primary m-1" href="{{ path('user_edit', {'id': user.usuario.id, 'role': role}) }}">Editar</a>
                                            {{ include('user/_delete_form.html.twig') }}
                                        </div>

                                    </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="1">No se han encontrado registros</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                                <th>Foto</th>
                                <th>Nombre y Apellidos</th>
                            {% if role == 'specialist' %}
                                <th>Especialidad</th>
                                <th>Nacionalidad</th>
                            {% endif %}
                            {% if role == 'patient' %}
                                <th>Teléfono</th>
                                <th>Dirección</th>
                            {% endif %}
                                <th>Email</th>
                                <th>Acciones</th>
                        </tr>
                        </tfoot>
                    </table>
                    <a class="btn btn-sm btn-primary mt-2" href="{{ path('user_new', {'role':role}) }}">Crear Nuevo</a>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/plugins/dataTables/jquery-3.5.1.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/plugins/dataTables/jquery.dataTables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/plugins/dataTables/dataTables.bootstrap4.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#tabla').DataTable({
                "oLanguage": {
                    "sLengthMenu": "_MENU_ elementos por página",
                    "sSearch": "Filtrar _INPUT_",
                    "sInfoFiltered": "(Filtrado desde _MAX_ elementos en total)",
                    "oPaginate": {
                        "sFirst": "Inicio",
                        "sLast": "Fin",
                        "sNext": "Siguiente",
                        "sPrevious": "Atrás"
                    },
                    "sInfo": "Mostrando _START_ hasta _END_ de _TOTAL_ elementos"
                },
                "iDisplayLength": 5,
                "aLengthMenu": [ [5, 10, 15, 20, -1], [5, 10, 15, 20, "Todo"] ]
            });
        } );
    </script>
{% endblock %}
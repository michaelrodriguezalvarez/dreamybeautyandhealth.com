{% extends 'base.html.twig' %}

{% block title %}Mostrar Beneficio{% endblock %}

{% block page_title %}Mostrar Beneficio{% endblock %}

{% block breadcrums %}
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Nomencladores</a></li>
    <li><a href="#">Beneficios</a></li>
    <li><a href="#">Mostrar Beneficio</a></li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <div>
                    {% for message in app.flashes('notification') %}
                        <div class="alert alert-info alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                </div>

                <table id="tabla" class="table table-striped table-bordered" style="width:100%">
        <tbody>
            <tr>
                <th>Imagen</th>
                {% if beneficio.imagen == null %}
                    <td><span>Sin imagen</span></td>
                {% else %}
                    <td><img src="{{ asset('uploads/images/' ~ beneficio.imagen.imagen) }}" alt="{{ beneficio.imagen.nombre }}" /></td>
                {% endif %}
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ beneficio.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ beneficio.descripcion }}</td>
            </tr>
        </tbody>
    </table>
                <div class="row">
                    <a class="btn btn-primary m-1 ml-3" href="{{ path('beneficio_index') }}">Listar</a>
                    <a class="btn btn-primary m-1" href="{{ path('beneficio_edit', {'id': beneficio.id}) }}">Editar</a>
                    {{ include('beneficio/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}

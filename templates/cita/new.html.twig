{% extends 'base.html.twig' %}

{% block title %}Crear Cita{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        input,
        [type="radio"]
        {
            margin-left: 10px;
            margin-top: 5px;
            margin-bottom: 5px;
        }
    </style>
{% endblock %}

{% block page_title %}Crear Cita{% endblock %}

{% block breadcrums %}
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Citas</a></li>
    <li><a href="#">Crear Cita</a></li>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div>
                        {% for message in app.flashes('notification') %}
                            <div class="alert alert-primary alert-dismissible fade show">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    </div>

                    <div>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-primary mt-2">{{ button_label|default('Crear')|trans }}</button>
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/plugins/dataTables/jquery-3.5.1.js') }}" type="text/javascript"></script>

<script type="text/javascript">
$(document).ready(function (){
    var tipo = 'Especialidad';

    function SeleccionarEspecialidad() {

        $('#cita_especialidad').val(null);
        $('#cita_paquete').val(null);
        $('#cita_servicio').val(null);

        switch (tipo) {
            case "Especialidad":
                $('#cita_especialidad').parent().show();
                $('#cita_paquete').parent().hide();
                $('#cita_servicio').parent().hide();
                break;
            case "Paquete":
                $('#cita_especialidad').parent().hide();
                $('#cita_paquete').parent().show();
                $('#cita_servicio').parent().hide();
                break;
            case "Servicio":
                $('#cita_especialidad').parent().hide();
                $('#cita_paquete').parent().hide();
                $('#cita_servicio').parent().show();
                break;
        }
    }

    SeleccionarEspecialidad();

    $('input[name="cita[tipo]"]').change(function (){
        tipo = $(this).val();
        SeleccionarEspecialidad();

    });
});
</script>
{% endblock %}

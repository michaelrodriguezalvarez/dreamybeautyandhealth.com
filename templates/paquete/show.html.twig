{% extends 'base.html.twig' %}

{% block title %}Mostrar Paquete{% endblock %}

{% block page_title %}Mostrar Paquete{% endblock %}

{% block breadcrums %}
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Paquetes</a></li>
    <li><a href="#">Mostrar Paquete</a></li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <div>
                    {% for message in app.flashes('notification') %}
                        <div class="alert alert-info alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                </div>

                <table id="tabla" class="table table-striped table-bordered" style="width:100%">
        <tbody>
            <th>Imagen</th>
            {% if paquete.imagen == null %}
                <td><span>Sin imagen</span></td>
            {% else %}
                <td><img src="{{ asset('uploads/images/' ~ paquete.imagen.imagen) }}" alt="{{ paquete.imagen.nombre }}" /></td>
            {% endif %}
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ paquete.nombre }}</td>
            </tr>
            <tr>
                <th>Descripci√≥n</th>
                <td>{{ paquete.descripcion }}</td>
            </tr>
            <tr>
                <th>Servicios</th>
                <td>
                    <ul>
                        {% for servicio in servicios %}
                            <li>{{ servicio.nombre }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
                <div class="row">
                    <a class="btn btn-primary m-1 ml-3" href="{{ path('paquete_index') }}">Listar</a>
                    <a class="btn btn-primary m-1" href="{{ path('paquete_edit', {'id': paquete.id}) }}">Editar</a>
                    {{ include('paquete/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}

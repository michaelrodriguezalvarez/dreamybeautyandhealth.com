{% extends 'base.html.twig' %}

{% block title %}Mostrar Especialidad{% endblock %}

{% block page_title %}Mostrar Especialidad{% endblock %}

{% block breadcrums %}
    <li><a href="#">Inicio</a></li>
    <li><a href="#">Nomencladores</a></li>
    <li><a href="#">Especialidades</a></li>
    <li><a href="#">Mostrar Especialidad</a></li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <div>
                    {% for message in app.flashes('notification') %}
                        <div class="alert alert-info alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                </div>

                <table id="tabla" class="table table-striped table-bordered" style="width:100%">
                    <tbody>
                    <tr>
                        <th>Imagen</th>
                        {% if especialidad.imagen == null %}
                            <td><span>Sin imagen</span></td>
                        {% else %}
                            <td><img src="{{ asset('uploads/images/' ~ especialidad.imagen.imagen) }}" alt="{{ especialidad.imagen.nombre }}" /></td>
                        {% endif %}
                    </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ especialidad.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ especialidad.descripcion }}</td>
            </tr>
        </tbody>
    </table>

                <div class="row">
                    <a class="btn btn-primary m-1 ml-3" href="{{ path('especialidad_index') }}">Listar</a>
                    <a class="btn btn-primary m-1" href="{{ path('especialidad_edit', {'id': especialidad.id}) }}">Editar</a>
                    {{ include('especialidad/_delete_form.html.twig') }}
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
